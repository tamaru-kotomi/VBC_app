generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 予定の対象者を定義する
enum Target {
  all
  boys
  boysA
  boysB
  girls
  girlsA
  girlsB
}

model Schedule {
  id            String   @id @default(cuid())
  date          DateTime 
  title         String   
  time          String?  
  location      String?  
  otherLocation String?  
  targetId      Target   @default(all)
  content       String?  
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  grades    Int[]    
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
}