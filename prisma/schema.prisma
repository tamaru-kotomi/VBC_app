// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// 予定の対象者を定義する
enum Target {
  ALL
  JUNIOR
  LADIES
}

// 練習予定（スケジュール）のモデル
model Schedule {
  id        String   @id @default(cuid())
  date      DateTime // 予定日
  title     String   // 練習内容（例：通常練習、練習試合）
  location  String   // 場所（例：〇〇小学校、△△スポーツセンター）
  target    Target   @default(ALL) // 対象（全員、ジュニア、レディース）
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ユーザー・管理者のモデル（将来のログイン機能用）
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  isAdmin       Boolean   @default(false) // 管理者（予定を書き込める人）かどうか
  grade         Int?      // ジュニアの学年
}